# ARETE Agent Core - Environment Variables
# Copy this file to .env and fill in your API keys

# =============================================================================
# REQUIRED - OpenRouter API (supports Claude, GPT-4, Llama, etc.)
# Get your key at: https://openrouter.ai/keys
# =============================================================================
OPENROUTER_API_KEY=sk-or-v1-...

# =============================================================================
# OPTIONAL - Model Selection (via OpenRouter)
# See all models: https://openrouter.ai/models
# =============================================================================
INTERVIEWER_MODEL=anthropic/claude-3.5-sonnet
FAIRNESS_MODEL=anthropic/claude-3-haiku

# =============================================================================
# OPTIONAL - LiveKit (Video + Voice)
# =============================================================================
LIVEKIT_URL=wss://your-instance.livekit.cloud
LIVEKIT_API_KEY=APIxxx
LIVEKIT_API_SECRET=secretxxx

# =============================================================================
# OPTIONAL - ElevenLabs (Text-to-Speech)
# =============================================================================
ELEVENLABS_API_KEY=...
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# =============================================================================
# OPTIONAL - Deepgram (Speech-to-Text)
# Get your key at: https://console.deepgram.com/
# =============================================================================
DEEPGRAM_API_KEY=...

# =============================================================================
# OPTIONAL - D-ID (Avatar Lip-Sync)
# =============================================================================
DID_API_KEY=...

# =============================================================================
# OPTIONAL - Observability (Arize Phoenix)
# =============================================================================
PHOENIX_COLLECTOR_ENDPOINT=http://localhost:6006
ENABLE_TRACING=true

# =============================================================================
# OPTIONAL - Database & Cache (for production)
# =============================================================================
DATABASE_URL=postgresql://user:pass@localhost:5432/arete
REDIS_URL=redis://localhost:6379
